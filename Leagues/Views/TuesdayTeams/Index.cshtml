@model IEnumerable<Leagues.Models.TuesdayTeam>

@{
    ViewBag.Title = "Index";
}

<h2>Tuesday Teams</h2>

<p>
    @Html.ActionLink("Add Team", "Create")<br/>
    <a href="/Reports/TuesdayTeamsReport.aspx" >Teams Report</a>
</p>
<table class="table-condensed table-striped">
<tr>
    <th>
        @Html.DisplayNameFor(model => model.id)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Skip)
    </th>
    <th>
        @Html.DisplayNameFor(model => model.Lead)
    </th>
    <th></th>
</tr>

@foreach (var item in Model) {
    <tr>
        <th>
            @Html.DisplayFor(modelItem => item.id)
        </th>
        <td>
            @Html.DisplayFor(modelItem => item.Player.FullName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Player1.FullName)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.id }) |
           @Html.ActionLink("Delete", "Delete", new { id = item.id }) |
            @Html.ActionLink("Remove Lead", "RemoveLead", new { id = item.id })
        </td>
    </tr>
}

</table>
